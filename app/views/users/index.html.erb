<h1>All Users</h1>

<%= paginate @users %>
<div id="all_users">
<ul class="users">
<% @users.each do |user| %>
<li>
<%= gravatar_for user, :size => 50 %>
<%= link_to user.name, user %>
<% if current_user.admin? %>
| <%= link_to "delete", user, :class => "button danger", :method => :delete, :confirm => "You sure?",
:title => "Delete #{user.name}" %>
<% end %>
</li>
<% end %>
</ul>
</div>